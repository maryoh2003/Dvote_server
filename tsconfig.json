{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "@entity/*": [
        "src/models/entities/*"
      ],
      "@middleware/*": [
        "src/middlewares/*"
      ],
      "@controller/*": [
        "src/controllers/*"
      ],
      "@service/*": [
        "src/services/*"
      ],
      "@repository/*": [
        "src/repositories/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@interface/*": [
        "src/interface/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@src/*": [
        "src/*"
      ]
    }
  }
}